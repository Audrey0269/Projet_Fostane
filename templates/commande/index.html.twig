{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
{# __________Lien pour icone FA_______________ #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">


    <h1 class="text-center mt-3">Commande</h1>

    <a href="{{ path('app_commande_index' , {'param' : 'n' }) }}">Commandes non livrées</a>
    <a href="{{ path('app_commande_index' , {'param' : 'o' }) }}">Commandes livrées</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adresse</th>
                <th>Date_commande</th>
                <th>Total</th>
                <th>Livraison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.name }}</td>
                <td>{{ commande.adresse }}</td>
                <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : ''}}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.livraison ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}"<i class="fa-solid fa-eye mr-50"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
