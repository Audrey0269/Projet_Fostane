{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

{# __________Lien pour icone FA_______________ #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">




<div class="container">
    <h1 class="text-center">Categorie</h1>


    <table class="table">
            <thead>
                <tr class="row">
                    <th class="text-center col-4">Id</th>
                    <th class="text-center col-4">Nom</th>
                    <th class="text-center col-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="row">
                    <td class="text-center col-4">{{ category.id }}</td>
                    <td class="text-center col-4">{{ category.name }}</td>
                    <td class="text-center col-4">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa-solid fa-eye mr-50"></i></a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
    </table>

    <a href="{{ path('app_category_new') }}"><button class="bg-dark text-white rounded-4">Créer une nouvelle catégorie</button></a>
</div>

{% endblock %}
