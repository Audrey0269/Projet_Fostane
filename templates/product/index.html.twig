{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

{# __________Lien pour icone FA_______________ #}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">

    <h1 class="text-center mb-5 mt-4">Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center text-uppercase">Id</th>
                <th class="text-center text-uppercase">Name</th>
                <th class="text-center text-uppercase">Description</th>
                <th class="text-center text-uppercase">Prix</th>
                <th class="text-center text-uppercase">Quantity</th>
                <th class="text-center text-uppercase">Ref</th>
                <th class="text-center text-uppercase">Image</th>
                <th class="text-center text-uppercase">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="col-1">{{ product.id }}</td>
                <td class="col-1">{{ product.name }}</td>
                <td class="col-5">{{ product.description }}</td>
                <td class="col-1">{{ product.prix }}</td>
                <td class="col-1">{{ product.quantity }}</td>
                <td class="col-1">{{ product.ref }}</td>
                <td class="col-1"><img class="w-100" src="{{ asset('images/' ~ product.image ) }}" alt=""></td>
                <td class="col-2">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}"><i class="fa-solid fa-eye mr-50"></i></a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
